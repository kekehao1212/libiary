@import '../logs/logs.wxss';

/* pages/borrow/borrow.wxss */

.option_container {
  align-self: center;
  display: flex;
  padding-top: 10rpx;
  justify-content: space-around;
}

.option {
  text-align: center;
  border: 1px solid #eee;
  border-radius: 6px;
  height: 50rpx;
  line-height: 50rpx;
  width: 210rpx;
  color: #f5f5f5;
}

.option_return {
  text-align: center;
  border: 1px solid #bdbdbd;
  border-radius: 6px;
  height: 50rpx;
  line-height: 50rpx;
  width: 210rpx;
  background-color: #66bb6a;
  color: #f5f5f5;
}

.book_container_form {
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  position: relative;
}

.option_png {
  width: 32rpx;
  height: 34rpx;
  vertical-align: text-top;
}

.header {
  font-size: 20px;
  text-align: center;
  margin: 50rpx;
}

.qr_img {
  width: 500rpx;
  height: 500rpx;
}

.qr_container {
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn {
  background-color: #6bcdda;
  margin-top: 50rpx;
  width: 500rpx;
}

.toggle_container {
  display: flex;
  padding-top: 15rpx;
  padding-bottom: 4rpx;
}

.borrow_check {
  color: white;
  border-radius: 35px 15px 15px 5px;
  background: #6acddb;
}

.order_check{
  color: white;
  border-radius: 15px 35px 5px 15px;
  background: #6acddb;
}


.order_left{
  text-align: center;
  width: 200rpx;
  margin-left:10rpx;
  height: 80rpx;
  line-height: 90rpx;
  margin-right: 20rpx;
  flex-grow: 1;
}

.order_right{
  margin-right:10rpx;
  margin-left: 20rpx;
  flex-grow: 1;
  height: 80rpx;
  line-height: 90rpx;
  text-align: center;
  width: 200rpx;
}


.divider {
  height: 3rpx;
  width: 100%;
  background: #ddd;
  left: 200rpx;
}
