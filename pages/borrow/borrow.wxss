@import '../logs/logs.wxss';

/* pages/borrow/borrow.wxss */

.option_container {
  align-self: center;
  display: flex;
  padding-top: 10rpx;
  justify-content: space-around;
}

.option {
  text-align: center;
  border: 1px solid #eeeeee;
  border-radius: 6px;
  height: 50rpx;
  line-height: 50rpx;
  width: 210rpx;
  color:#f5f5f5;
}
.option_return{
  text-align: center;
  border: 1px solid #bdbdbd;
  border-radius: 6px;
  height: 50rpx;
  line-height: 50rpx;
  width: 210rpx;
  background-color:#66bb6a;
  color:#f5f5f5;
}

.book_container_form {
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  position: relative;
}

.option_png {
  width: 32rpx;
  height: 34rpx;
  vertical-align:text-top;
}
.header{
  font-size:20px;
  text-align: center;
  margin: 50rpx;
}
.qr_img{
  width: 500rpx;
  height: 500rpx
}
.qr_container{
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn{
  background-color:#6BCDDA;
  margin-top: 50rpx;
  width:500rpx;
}
