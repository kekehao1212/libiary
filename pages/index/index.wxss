/**index.wxss**/

.search {
  height: 420rpx;
  width: 750rpx;
}

.search_image {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  left: 10rpx;
  top: 25rpx;
}

.swiper {
  height: 400rpx;
}

.text input {
  background-color: white;
  width: 650rpx;
  height: 75rpx;
  border-radius: 30rpx;
  padding-left: 25px;
  opacity: 0.4;
}

image {
  display: inline;
}

.text {
  position: absolute;
  height: 75rpx;
  left: 25rpx;
  top: 250rpx;
}

.placeholder {
  font-size: 30rpx;
  color: black;
  font-family: 微软雅黑;
}

.hint {
  height: 100rpx;
  width: 750rpx;
}

.container {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.container_child {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  align-items: center;
}

.option_image {
width:70rpx;
height:70rpx;

  padding: 10rpx;
}

.option_font {
  font-size: 14px;
  color: #636363;
}

.hot_text {
  text-align: center;
  font-size: 20px;
  color: #636363;
}

.hot_recom {
  padding-top: 20rpx;
}

.relat_image {
  width: 100%;
  height: 100%;
}

.relat_container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.relat_title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  width: 100%;
  font-size: 14px;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 10rpx;
}

.relat_image_container {
  width: 150rpx;
  height: 225rpx;
  margin-bottom: 30rpx;
  padding: 40rpx;
}

.cut_line {
  width: 100%;
  background-color: #e7e7e7;
  height: 2px;
}
